{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["esNext", "DOM", "DOM.Iterable"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "inlineSources": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,

		"skipLibCheck": true,
		"esModuleInterop": true


  },
  "include": ["src/**/*.ts", "src/**/*.mts", "src/**/*.js", "src/**/*.mjs"],
  "exclude": ["./rollup.config.js", "src/**/*.jsr"]
}
